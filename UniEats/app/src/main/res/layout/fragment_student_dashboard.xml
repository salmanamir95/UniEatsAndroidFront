<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frontend.dashboard.student.StudentFragment">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/student_top_bar"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile"
            android:layout_gravity="end" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Dashboard"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Main Content -->
    <FrameLayout
        android:id="@+id/fragment_student_nav_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/student_top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/navigation_bar"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#FFFFFF"
        android:gravity="center"
        android:padding="8dp">

        <ImageView
            android:id="@+id/home_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_home"
            android:contentDescription="Home"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/orders_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_orders"
            android:contentDescription="Orders"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/payments_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_payments"
            android:contentDescription="Payments"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/profile_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="Profile" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>