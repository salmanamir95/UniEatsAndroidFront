<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Corner radius -->
    <corners android:radius="12dp" />

    <!-- Optional shadow-like stroke -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Optional padding inside (used only when used as a background) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
